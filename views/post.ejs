<%- include("partials/_header") -%>

<body>

  <!-- Navigation -->
  <%- include("partials/_nav") -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <span class="meta">Posted by
              <a href="#">Start Bootstrap</a>
              on <%= post.dateCreated.getDate() %>/<%= post.dateCreated.getMonth()+1 %>/<%= post.dateCreated.getFullYear() %></span>
          </div>
          <div>
            <a href="/edit/<%= post.id%>" class="btn btn-primary"> Update Post </a>
            <a href="/delete/<%= post.id%>" class="btn btn-warning"> Delete Post </a>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <h1><%= post.detail %></h1>
        </div>
      </div>
    </div>
  </article>

  <hr>

  <!-- Footer -->
  <%- include("partials/_footer") -%>

  <!-- Bootstrap core JavaScript -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="/js/clean-blog.min.js"></script>

</body>

</html>
